<AGF-HUDPlus-EnhancedPatch>



<!--Replaces the food/water icons with actual food/water amounts-->
		<remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='food']/sprite[@name='Icon']"/>
		<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='food']/label[@name='TextContent']/@pos">0,-59</set>
		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='food']">
			<label depth="7" name="TextContent" pos="0,-2" font_size="18" color="[white]" text="{PlayerFood}"  height="34" width="42" justify="center" tooltip_key="xuiFoodAmount" controller="PlayerStats, PlayerStatController"/>
			<!--<label depth="7" name="TextContent" pos="0,-18" font_size="18" color="222,206,163,255" text="{PlayerFoodMax}"  height="34" width="42" justify="center" tooltip_key="xuiFoodAmount" controller="PlayerStats, PlayerStatController"/>-->
		</append>
		
		<remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='water']/sprite[@name='Icon']"/>	
		<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='water']/label[@name='TextContent']/@pos">34,-59</set>	
		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='water']">
			<label depth="7" name="TextContent" pos="34,-2" font_size="18" color="[white]" text="{PlayerWater}"  height="34" width="42" justify="center" tooltip_key="xuiWaterAmount" controller="PlayerStats, PlayerStatController"/>
			<!--<label depth="7" name="TextContent" pos="34,-18" font_size="18" color="222,206,163,255" text="{PlayerWaterMax}"  height="34" width="42" justify="center" tooltip_key="xuiWaterAmount" controller="PlayerStats, PlayerStatController"/>-->
		</append>	


<!--extra details-->
		<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='OutdoorTemp']/@pos">276,-93</set>
		<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@name='Elevation']/@pos">334,-93</set>

		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@pos='9,145']">
				<rect name="XPtoNextLVL" pos="160,-93" rows="1" cols="1" width="84" controller="PlayerStats, PlayerStatController"  side="right">
					<sprite depth="2" name="background" pos="-5,4" width="54" height="52" color="0,0,0,255" type="sliced" />
					<sprite depth="2" name="windowIcon" pos="13,-2" width="19" height="19" sprite="ui_game_symbol_block_upgrade" color="[iconColor]" foregroundlayer="true" tooltip_key="xuiXPToNextLevel"/>
					<label depth="15" name="LevelNumber"  pos="22,-34" width="46" height="42" pivot="center" justify="center" text="{PlayerXPToNextLevel}" color="222,206,163,220" font_size="22" tooltip_key="xuiXPToNextLevel"/>
				</rect>	
				<rect name="LootStage" pos="218,-93" rows="1" cols="1" width="84" controller="PlayerStats, PlayerStatController"  side="right">
					<sprite depth="2" name="background" pos="-5,4" width="54" height="52" color="0,0,0,255" type="sliced" />
					<sprite depth="2" name="windowIcon" pos="13,-2" width="19" height="19" sprite="ui_game_symbol_shopping_cart" color="[iconColor]" foregroundlayer="true" tooltip_key="xuiLootstage"/>
					<label depth="15"  name="LevelNumber" pos="22,-34" width="46" height="42" pivot="center" justify="center" text="{PlayerLootStage}" color="0,200,255,220" font_size="22" tooltip_key="xuiLootstage"/>
				</rect>	
		</append>

	
	<append xpath="/windows/window[@name='chatoutput']/textlist">					
				<rect name="killsanddeaths" pos="480,185" >
					<rect name="PlayerEnemyKills" pos="20,0" rows="1" cols="1" controller="PlayerStats, PlayerStatController" side="right">
						<sprite depth="2" name="background" pos="0,4" width="88" height="52" color="[darkGrey]" type="sliced" />
						<label depth="3" name="WhatIsIt" pos="4,-2" width="80" height="19" text=""  justify="center" text_key="xuiZombieKills" font_size="22"/>
						<label depth="15" name="LevelNumber" pos="4,-23" width="80" height="42"  justify="center" text="{PlayerZombieKills}" color="0,150,54,250" font_size="22" tooltip_key="xuiZombieKills"/>
					</rect>
					<rect name="PlayerPVPKills" pos="20,-60" rows="1" cols="1" controller="PlayerStats, PlayerStatController" side="right">
						<sprite depth="2" name="background" pos="0,4" width="88" height="52" color="[darkGrey]" type="sliced" />
						<label depth="3" name="WhatIsIt" pos="4,-2" width="80" height="19" text="" justify="center" text_key="xuiPlayerKills" font_size="22"/>
						<label depth="15" name="LevelNumber" pos="4,-23" width="80" height="42"  justify="center" text="{PlayerPvPKills}" color="0,200,255,220" font_size="22" tooltip_key="xuiPlayerKills"/>
