						<sprite depth="2" name="background" pos="0,4" width="88" height="52" color="[darkGrey]" type="sliced" />
						<label depth="3" name="WhatIsIt" pos="4,-2" width="80" height="19" text="" justify="center" text_key="xuiDeaths" font_size="22"/>
						<label depth="15" name="LevelNumber" pos="4,-23" width="80" height="42"  justify="center" text="{PlayerDeaths}" color="255,0,0,180" font_size="22" tooltip_key="xuiDeaths"/>
					</rect>	
				</rect>		
	</append>	

	

</AGF-HUDPlus-EnhancedPatch>


